<MyLabel@Label>:
    multiline: True
    halign: 'left'
    valign: 'top'
    text_size: self.size
    color: 0, 0, 0
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

<VBoxLayout@BoxLayout>:
    orientation: 'vertical'

<SteelTB@ToggleButton>:
    group: 'steel'
    name: 'steel'

<ThickenTB@ToggleButton>:
    group: 'thicken'
    name: 'thicken'

<TypeTTB@ToggleButton>:
    group: 'typet'

<ItemSpinner@Spinner>:
    name: 'item'
    background_color: [0, 1, 1, 1]

<MyRoot>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    VBoxLayout:
        size_hint: 1, 3
        Label:
            id: top_str_l
            size_hint: 1, 0.1
            init_text: ''
            text: self.init_text
        MyLabel:
            id: result_l
            init_text: ''
            text: self.init_text
        MyLabel:
            id: sum_l
            size_hint: 1, 0.05
            init_text: 'SUM: '
            text: self.init_text
    VBoxLayout:
        BoxLayout:
            SteelTB:
                text: '201'
                state: 'down'
                on_state:
                    if self.state == 'down': root.change_dict(self)
            SteelTB:
                text: '304'
                on_state:
                    if self.state == 'down': root.change_dict(self)
            SteelTB:
                text: '321'
                on_state:
                    if self.state == 'down': root.change_dict(self)
        BoxLayout:
            ThickenTB:
                text: '0,5'
                state: 'down'
                on_state:
                    if self.state == 'down': root.change_dict(self)
            ThickenTB:
                text: '0,8'
                on_state:
                    if self.state == 'down': root.change_dict(self)
            ThickenTB:
                text: '1'
                on_state:
                    if self.state == 'down': root.change_dict(self)
        BoxLayout:
            TypeTTB:
                id: sndv
                text: 'Сендвіч'
                state: 'down'
                on_state:
                    if self.state == 'down': root.spinner_values(self)
            TypeTTB:
                id: gola
                text: 'Гола'
                on_state:
                    if self.state == 'down': root.spinner_values(self)
            Spinner:
                name: 'diam'
                id: diamValSp
                text: 'd150/220'
                values: root.d_sndv
                on_text:
                    root.change_dict(self)
    VBoxLayout:
        spacing: 10
        GridLayout:
            cols: 3
            ItemSpinner:
                id: zknSp
                init_text: 'Закінчення'
                text: self.init_text
                values: root.zkn_sndv
                on_text:
                    if self.text != self.init_text: root.change_dict(self)
                    self.text = self.init_text
            ItemSpinner:
                id: trnkSp
                init_text: 'Трійник'
                text: self.init_text
                values: root.trnk_sndv
                on_text:
                    if self.text != self.init_text: root.change_dict(self)
                    self.text = self.init_text
            ItemSpinner:
                id: tubeSp
                init_text: 'Труба'
                text: self.init_text
                values: root.tube_sndv
                on_text:
                    if self.text != self.init_text: root.change_dict(self)
                    self.text = self.init_text
            ItemSpinner:
                id: inshSp
                init_text: 'Інше'
                text: self.init_text
                values: root.make_list(('insh_button', 'insh'))
                on_text:
                    if self.text != self.init_text: root.change_dict(self)
                    self.text = self.init_text
            ItemSpinner:
                id: kolnSp
                init_text: 'Коліно'
                text: self.init_text
                values: root.kln_sndv
                on_text:
                    if self.text != self.init_text: root.change_dict(self)
                    self.text = self.init_text
            ItemSpinner:
                id: krplSp
                init_text: 'Кріплення'
                text: self.init_text
                values: root.make_list(('krpg_button', 'krpg'))
                on_text:
                    if self.text != self.init_text: root.change_dict(self)
                    self.text = self.init_text
        BoxLayout:
            size_hint: 1, 0.5
            Spinner:
                name: 'num'
                id: num
                init_text: 'Скільки штук?'
                text: self.init_text
                values: '1', '2', '3', '4', '5', '6', '7', '8', '9'
                on_text:
                    if self.text != self.init_text: root.change_dict(self)
                    self.text = self.init_text
            Button:
                id: ok
                text: 'Ok'
                on_press:
                    root.ok()
            Button:
                id: clear
                text: 'Clear'
                on_press:
                    root.clear()
